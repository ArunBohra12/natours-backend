{
  "name": "natours-backend",
  "version": "1.0.0",
  "description": "Backend for Natours project",
  "main": "./src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/server.ts",
    "build": "tsc",
    "serve": "npm run build && node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/server.js",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint --fix ./src --ext .ts",
    "prepare": "husky"
  },
  "author": "Arun Bohra",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.0",
    "@types/validator": "^13.11.9",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  }
}
